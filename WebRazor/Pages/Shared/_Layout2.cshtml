<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo-admin">
                Ecommerce Admin
            </div>
            <div id="banner-admin">
                <ul>
                    <li><a asp-page="/Account/Login" asp-page-handler="Logout">SignOut</a></li>
                </ul>
            </div>
        </div>
        <div id="content">
            <div id="content-left">
                <ul>
                    <a asp-page="/Admin/Dashboard/Index">
                    <li>Dashboard</li></a>
                    <a asp-page="/Admin/Order/Index">
                    <li>Orders</li></a>
                    <a asp-page="/Admin/Product/Index">
                    <li>Products</li></a>
                    <a asp-page="/Admin/Customer/Index">
                    <li>Customers</li></a>
                    <a asp-page="/Admin/Employee/Index">
                    <li>Employees</li></a>
                </ul>
            </div>
            <div id="content-right">
                <div class="content-main">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div id="footer-admin">footer</div>

        <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/site.js"></script>
    </div>
</body>
</html>
